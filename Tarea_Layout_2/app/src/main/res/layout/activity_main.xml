<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 1"/>
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 2"/>
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 3"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 4"/>
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 5"/>
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 6"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 7"/>
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 8"/>
            <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#800080" android:layout_margin="4dp" android:contentDescription="Botón 9"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:contentDescription="Salir de la aplicación"/>

</LinearLayout>
